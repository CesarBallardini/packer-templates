{
	"variables": {
		"ssh_user": "vagrant",
		"ssh_pass": "vagrant",
		"name": "centos7"
	},

	"builders": [{
		"type": "virtualbox-iso",
		"guest_os_type":"RedHat_64",
		"guest_additions_mode": "upload",
		"headless": "false",

		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "512"],
			["modifyvm", "{{.Name}}", "--cpus", "1"]
		],

		"disk_size": "5120",

		"output_directory": "builds",

		"iso_url": "http://mirror.internode.on.net/pub/centos/7.1.1503/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
		"iso_checksum": "7c1e34e95c991175290d704dbdcc6531774cbecb",
		"iso_checksum_type": "sha1",

		"http_directory": "installconfig",

		"ssh_username": "{{user `ssh_user`}}",
		"ssh_password": "{{user `ssh_pass`}}",
		"ssh_wait_timeout": "20m",
		
		"shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",

		"boot_wait": "10s",
		"boot_command": [
			"<esc><wait>",
			"linux ",
			"ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos/kickstart.cfg<enter>"
		]
	}],

	"post-processors": [{
		"type": "vagrant",
		"output": "boxes/{{user `name`}}.box"
	}],

	"provisioners": [{
		"type": "shell",
		"execute_command": "echo {{user `ssh_user`}} | sudo -E -S bash '{{.Path}}'",
		"scripts": [
			"scripts/common/vagrantkey.sh",
			"scripts/centos/vmtools.sh",
			"scripts/centos/puppet.sh",
			"scripts/centos/cleanup.sh"
		]
	}]
}
